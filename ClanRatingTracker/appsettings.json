{
  "AppConfiguration": {
    "Discord": {
      "Token": "<Your_Token>",
      "GuildId": <GuildId>,
      "ChannelId": <ChannelId>,
      "RoleId": <RoleId>
    },
    "ClanTracking": {
      "ClanUrl": "https://warthunder.com/en/community/claninfo/Aces%20of%20Anatolia",
      "RetryAttempts": 3,
      "RetryDelayMs": 1000
    },
    "ConnectionStrings": {
      "DefaultConnection": "Data Source=clantracking.db"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "ClanRatingTracker": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/clan-tracker-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}